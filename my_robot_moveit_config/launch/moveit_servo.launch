<!-- ~/ros_ws/src/my_robot_moveit_config/launch/moveit_servo.launch -->
<launch>
  <!-- ======================== 步骤 1: 加载机器人模型 ======================== -->
  <include file="$(find my_robot_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
  </include>

  <!-- 加载YAML配置文件 -->
  <rosparam command="load" file="$(find my_robot_moveit_config)/config/rm_75_servo.yaml" />

  <!-- 启动 moveit_servo 节点 -->
 <node name="servo_server" pkg="moveit_servo" type="servo_server" output="screen" launch-prefix="xterm -hold -e"/>
</launch>